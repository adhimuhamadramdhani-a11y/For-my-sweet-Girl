function openLeft(){
 leftBox.classList.add('active');
 type(leftText,leftFull);
}
function openRight(){
 rightBox.classList.add('active');
 type(rightText,rightFull);
}
function closeBox(){
 leftBox.classList.remove('active');
 rightBox.classList.remove('active');
}

// Menjalankan teks halaman akhir (Page 4)
