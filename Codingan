<script>
let typedAbout = false;

function go(n){
  const song = document.getElementById('mySong');
  
  // Memulai lagu saat klik pertama ke halaman 2
  if(n === 2) {
    song.play().catch(error => {
      console.log("Autoplay dicegah oleh browser");
    });

    if(!typedAbout) {
      type(document.getElementById('aboutText'), aboutTextFull);
      typedAbout = true;
    }
  }
  
  document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
  document.getElementById('p'+n).classList.add('active');
}

function type(el,text,speed=25){
  el.innerHTML=''
  let i=0
  let t=setInterval(()=>{
    el.innerHTML+=text[i]
    i++
    if(i>=text.length) clearInterval(t)
  },speed)
}

const aboutTextFull = `Dia adalah wanita paling cantik, imut, dan sweet yang pernah ku temui. Aku sangat beruntung bisa bertemu dengan dia, karna bagi aku dia itu wanita pertama yang bisa bikin aku mencintainya banget setelah ibu ku. Dia itu orang nya lucu, humoris, aktif, dan dia juga pinter lohh. Tapi kadang kalo ada yg bikin mood nya jelek, dia juga suka tiba¬≤ marah-marah, suka tiba¬≤ sedih jugaa, walau kadang dia sedih dan marah nya bukan karna aku, tapi tetep aku juga yg kena imbas nya huhu T_T. Tapi gak papa aku tetep sayanggg banget sama dia. Tambahan dikit dia itu jago buat redain emosi atau sedih nya aku. Tapi aku suka sedih, karna kalo dia lagi emosi dan sedih, aku kadang gak bisa apa apa HUHUHU SEDIHH‚òπÔ∏è. Pokok nya aku sayang banget sama diaa Love u Wuppü´∂ü´∂`;

